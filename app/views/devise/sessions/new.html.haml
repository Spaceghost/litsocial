%h2 
  Sign in via Email
  %small=link_to "or you can use Facebook instead", omniauth_authorize_path(resource_name, "facebook")

=simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .form-horizontal
    =continue_redirect
    =f.input :email, hint: link_to("Don't have an account?", new_registration_path(resource_name))
    =f.input :password, hint: link_to("Forgot your password?", new_password_path(resource_name))
    =f.input :remember_me, as: :boolean, label: "Remember Me" if devise_mapping.rememberable?
    .form-actions
      =f.button :submit, "Sign In", class: 'btn-primary'
      =link_to "Cancel", return_path('/'), :class => "btn"
